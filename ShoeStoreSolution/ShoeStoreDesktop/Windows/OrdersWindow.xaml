<Window x:Class="ShoeStoreDesktop.Windows.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр заказов" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Icon="/Icon.ico">

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#F8FFF0" 
                BorderBrush="#7FFF00" 
                BorderThickness="0,0,0,2"
                Padding="15">
            <StackPanel>
                <TextBlock x:Name="TitleTextBlock" 
                           Text="Мои заказы" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#2E8B57"/>
                <TextBlock x:Name="SubtitleTextBlock" 
                           Text="Список всех заказов" 
                           Margin="0,5,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock x:Name="UserRoleTextBlock"
                               Text="Пользователь"
                               FontSize="12"
                               FontStyle="Italic"
                               Foreground="#666666"/>
                    <TextBlock Text=": "
                               FontSize="12"
                               Foreground="#666666"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#2E8B57"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid x:Name="OrdersDataGrid" 
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  BorderBrush="#7FFF00"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ заказа" 
                                    Binding="{Binding OrderId}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Клиент" 
                                    x:Name="CustomerColumn"
                                    Binding="{Binding Customer.FullName}" 
                                    Width="150"/>
                <DataGridTemplateColumn Header="Состав заказа" 
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="{Binding ArticleNavigation.Name}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text=" - " Margin="2,0"/>
                                            <TextBlock Text="{Binding Quantity}"/>
                                            <TextBlock Text=" шт." Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Дата заказа" 
                                    Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Стоимость" 
                                    Binding="{Binding TotalPrice, StringFormat={}{0:N2} ₽}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Статус" 
                                    Binding="{Binding Status}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Код получения" 
                                    Binding="{Binding PickupCode}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" 
                        Content="Закрыть" 
                        Width="120"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>