<Window x:Class="ShoeStoreDesktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Магазин обуви" 
        Height="550" 
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/Icon.ico">

    <Grid Background="#FFFFFF">
        <Border Style="{StaticResource SecondaryPanel}" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="400">

            <StackPanel>
                <Border Width="80" 
                        Height="80" 
                        Background="#7FFF00"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"
                        CornerRadius="8"
                        BorderBrush="#00FA9A"
                        BorderThickness="2">
                    <Image Source="../Icon.ico" 
                           Width="48" 
                           Height="48"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Text="Вход в систему" 
                           Style="{StaticResource WindowTitle}"/>

                <StackPanel Style="{StaticResource FormGroup}">
                    <Label Content="Логин:"/>
                    <TextBox x:Name="LoginTextBox" 
                             MaxLength="50"/>

                    <Label Content="Пароль:"/>
                    <PasswordBox x:Name="PasswordTextBox" 
                                 MaxLength="50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button x:Name="AuthButton" 
                            Content="Войти" 
                            Style="{StaticResource AccentButton}"
                            Click="AuthButton_Click"
                            Width="120"/>
                </StackPanel>

                <Border x:Name="ErrorBorder"
                        Background="#FFF0F0"
                        BorderBrush="#FF9999"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorTextBlock" 
                               Foreground="#CC0000" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>