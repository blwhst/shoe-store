<Window x:Class="ShoeStoreDesktop.Windows.SelectProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ShoeStoreDesktop.Converters"
        Title="Выбор товаров" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Icon.ico">

    <Window.Resources>
        <converters:QuantityToTextConverter x:Key="QuantityToTextConverter"/>
    </Window.Resources>

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FFF0F0" 
                BorderBrush="#FF9999" 
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock x:Name="TitleTextBlock"
                           Text="Выберите товары для удаления" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#CC0000"/>
                <TextBlock x:Name="SubtitleTextBlock"
                           Text="Отметьте товары, которые нужно удалить" 
                           Margin="0,5,0,0"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="SelectAllButton" 
                        Content="Выбрать все" 
                        Click="SelectAllButton_Click"
                        Width="120"
                        Margin="0,0,10,0"/>

                <Button x:Name="DeselectAllButton" 
                        Content="Снять выбор" 
                        Click="DeselectAllButton_Click"
                        Width="120"/>

                <TextBlock x:Name="SelectedCountTextBlock" 
                           Text="Выбрано: 0"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           FontWeight="Bold"/>
            </StackPanel>

            <DataGrid x:Name="ProductsDataGrid" 
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      SelectionMode="Single"
                      BorderBrush="#FF9999"
                      BorderThickness="1"
                      MouseDoubleClick="ProductsDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="30">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="CheckBox_CheckedChanged"
                                          Unchecked="CheckBox_CheckedChanged"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Артикул" 
                                        Binding="{Binding Article}" 
                                        Width="80"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Наименование" 
                                        Binding="{Binding Name}" 
                                        Width="*"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Производитель" 
                                        Binding="{Binding Manufacturer.Name}" 
                                        Width="150"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Цена" 
                                        Binding="{Binding Price, StringFormat={}{0:N2} ₽}" 
                                        Width="80"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Скидка" 
                                        Binding="{Binding Discount, StringFormat={}{0}%}" 
                                        Width="70"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Наличие" 
                                        Width="80"
                                        IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Quantity">
                                <Binding.Converter>
                                    <converters:QuantityToTextConverter/>
                                </Binding.Converter>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0"
                Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Width="120"
                        Click="CancelButton_Click"/>

                <Button x:Name="ContinueButton" 
                        Content="Продолжить" 
                        Background="#CC0000"
                        Foreground="White"
                        BorderBrush="#990000"
                        FontWeight="Bold"
                        Width="120"
                        Margin="10,0,0,0"
                        Click="ContinueButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>