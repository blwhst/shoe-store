@page
@model ShoeStoreWeb.Pages.Orders.IndexModel
@{
    var userRole = HttpContext.Session.GetString("Role");
    ViewData["Title"] = userRole == "Клиент" ? "Мои заказы" : "Все заказы";
}

<style>
    body, .times-font {
        font-family: 'Times New Roman', serif;
    }

    .page-title {
        font-weight: bold;
        color: #000000;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .table-custom {
        border: 2px solid #00FA9A;
    }

    .table-header {
        background-color: #7FFF00;
        color: #000000;
    }
</style>

<h1 class="times-font page-title text-black">@ViewData["Title"]</h1>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-info">
        Заказы не найдены.
    </div>
}
else
{
    <table class="table table-custom">
        <thead class="table-header">
            <tr>
                <th>Номер заказа</th>
                @if (!Model.IsClient())
                {
                    <th>Клиент</th>
                }
                <th>Состав</th>
                <th>Дата заказа</th>
                <th>Итоговая стоимость</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    @if (!Model.IsClient())
                    {
                        <td>@order.Customer?.FullName</td>
                    }
                    <td>
                        @foreach (var item in order.OrderItems)
                        {
                            <div>@item.ArticleNavigation?.Name - @item.Quantity шт.</div>
                        }
                    </td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                    <td>@Model.GetTotalPrice(order).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-page="/Products/Index" class="btn btn-primary">Вернуться к товарам</a>
</div>